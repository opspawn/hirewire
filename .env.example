# HireWire Configuration
# Copy this file to .env and fill in the values

# Model provider: mock, azure_openai, azure_ai, ollama, openai
# When azure-hackathon.env is sourced, azure_openai is auto-detected.
MODEL_PROVIDER=mock

# Azure OpenAI (direct openai SDK â€” preferred for live demos)
AZURE_OPENAI_ENDPOINT=https://<your-resource>.openai.azure.com/
AZURE_OPENAI_KEY=
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# Azure AI Project (for agent_framework_azure_ai)
AZURE_AI_PROJECT_ENDPOINT=
AZURE_AI_MODEL_DEPLOYMENT=gpt-4o

# Azure Cosmos DB (cloud persistence)
COSMOS_ENDPOINT=https://<your-account>.documents.azure.com:443/
COSMOS_KEY=

# Application Insights (telemetry)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Ollama (local development)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2

# OpenAI (fallback)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# x402 Payment Integration
X402_FACILITATOR_URL=https://facilitator.payai.network
X402_NETWORK=eip155:8453
X402_RECEIVER_ADDRESS=
X402_PRIVATE_KEY=

# API Server
API_HOST=0.0.0.0
API_PORT=8080

# MCP Servers
REGISTRY_MCP_PORT=8090
PAYMENT_MCP_PORT=8091

# Human-in-the-Loop (HITL) Approval
HITL_COST_THRESHOLD=1.0
HITL_TIMEOUT_SECONDS=3600

# Demo mode (auto-seed data on startup)
HIREWIRE_DEMO=0

# Azure Container Registry (deployment)
ACR_NAME=
ACR_LOGIN_SERVER=
ACR_USERNAME=
ACR_PASSWORD=

# Azure Infrastructure
AZURE_RESOURCE_GROUP=
AZURE_LOCATION=eastus
AZURE_SUBSCRIPTION_ID=
CONTAINERAPP_ENV=
